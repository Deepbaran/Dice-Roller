<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dice_2"
        app:layout_constraintTop_toTopOf="@+id/upperLine"
        app:srcCompat="@drawable/dice1" />

    <ImageView
        android:id="@+id/dice_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/dice_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperLine"
        app:srcCompat="@drawable/dice1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="501dp" />

    <TextView
        android:id="@+id/scoreCount"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:text="@string/_0"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/rollButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/rollButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/resetButton"
        android:text="@string/roll"
        android:textAllCaps="false"
        android:layout_marginBottom="25dp"
        android:background="@drawable/circular_edge_button"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLine"
        app:layout_constraintLeft_toRightOf="@id/rollButton"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:layout_marginBottom="25dp"
        android:background="@drawable/circular_edge_button"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="655dp" />
</androidx.constraintlayout.widget.ConstraintLayout>